# ===============================
# Application Name
# ===============================
spring.application.name=PollingApplication

# ===============================
# Datasource Configuration (MySQL)
# ===============================
spring.datasource.url=jdbc:mysql://localhost:3306/pollingdb?createDatabaseIfNotExist=true&allowPublicKeyRetrieval=true&useSSL=false

spring.datasource.username=root
spring.datasource.password=6+ characters
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ===============================
# JPA / Hibernate Configuration
# ===============================
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui/index.html
springdoc.swagger-ui.operationsSorter=alpha
springdoc.swagger-ui.tagsSorter=alpha

# ===============================

# Logging
# ===============================
logging.level.org.springframework=INFO
logging.level.com.example=DEBUG

# ===============================
# Swagger / OpenAPI
# ===============================

